@media all and (max-height: 680px) {
	.b-title {
		&__logo {
			& {
				padding: 60px 0 0 0;
			}
			&-breadcrumbs {
				& {
					margin-bottom: 4vh;
				}
			}
			&-text {
				margin-bottom: 5vh;
			}
			&-img {
				& {
					margin-bottom: 5vh;
				}
			}
			&-note {
				margin: 0 auto 9vh;
			}
		}
	}
}
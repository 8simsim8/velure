	.b-side__bar {
		& {
			margin-top: 10px;
		}
		&.form {
			top: auto;
			padding : 20px 20px 10px;
		}
		.icon-ligature-half {
			display: none;
		}
		h3 {
			margin-bottom: 5px;
			font-size: 26px;
		}
		h4 {
			margin-bottom: 0;
			font-size: 18px;
		}
		button {

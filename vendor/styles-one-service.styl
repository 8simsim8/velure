@import 'nib'

.l-content {
	margin-bottom: 50px;
}

.b-title {
	&__logo {
		&-breadcrumbs {
			& {
				margin-bottom: 6vh;
			}
		}
		&-text {
			margin-left: 20px
			margin-right: 20px
			margin-bottom: 7vh;
		}
		&-ligature {
			& {
				margin-bottom: 7vh;
			}
			svg {
				height: 40px;
			}
		}
		&-note {
			margin: 0 20px 12vh;
			max-width: 930px;
			text-align: center;
			color: #FFFFFF
		}
		&-feature {
			& {
				color: #FFFFFF;
				text-align: center;
			}
			span {
				& {
					min-width: 180px;
					padding-top: 80px;
					margin: 0 10px;
				}
				&:before {
					position: absolute;
					top: 0;
					left: 0;
					width: 100%;
					margin: 0 auto;
					font-size: 41px;
					line-height: 80px;
				}
				&.icon-all-body:before {
					font-size: 65px;
				}
				&:not(:last-child):after {
					top: 0;
					right: -10px;
					height: 110px;
					border-left: 1px solid rgba(255,255,255,0.2);
				}
			}
		}
	}
}

.b-about {
	& {
	}
	h2 {
		margin-bottom: 60px;
	}
	.lead {
		margin-bottom: 70px;
		color: #474747;
	}
	&__slider {
		& {
			margin-bottom: 50px;
		}
		&-wrap {
			height: 475px;
			margin-bottom: 50px;
		}
		&-slide {
			& {
				height: 100%
			}
			img {
				height: 100%;
				//width: 100%;
				//object-fit: contain;
				object-fit: cover;
			}
		}
		.swiper-controls {
			& {
				top: calc(50% - 40px);
			}
			&-prev {
				left: 50px;
			}
			&-next {
				right: 50px;
			}
		}
	}

	&__detail {
		& {
		}
		&-item {
			&:not(:last-child) {
				margin-bottom: 35px;
			}
			h4 {
				color: #a823a3;
				margin-bottom: 0.8em;
			}
			p.text {
				color: #40363e;
				margin-bottom: 1.5em;
			}
			p.text:last-child {
				margin-bottom: 0;
			}
		}
	}
}

.b-prices {
	& {
		padding-top: 65px;
	}
	h3 {
		margin-bottom: 0.7em;
	}
}

.b-faq {
	& {
		padding-top: 68px;
	}
	h3 {
		margin-bottom: 0.7em;
	}
	&__accordeon {
		.acc-hidden-element__wrap {
			& {
				padding : 30px 40px 30px 70px;
			}
			p,
			ul {
				margin-bottom: 1.5em;
			}
			ul {
				& {
				}
				li {
					list-style-position: inside;
					list-style-type : disc;
				}
			}
		}
	}
}

.b-packages {
	& {
		padding-top: 65px;
	}
	h3 {
		margin-bottom: 0.7em;
	}
	&__accordeon {
		.acc-hidden-element {
			& {
			}
		}
		.acc-item .acc-hidden-element__wrap.two-col {
			& {
				flex-direction : column;
			}
			& > * {
				width: 100%;
			}
			.swiper-container {
				height: 500px;
			}
		}
	}
}
.b-other-services {
	& {
		padding-top: 65px;
	}
	h3 {
		margin-bottom: 0.7em;
	}
	&__links {
		& {
			display: flex;
			flex-wrap: wrap;
		}
		&-item {
			&.row1 {
				width: 12.5%;
			}
			&.row2 {
				width: 25%;
			}
			&.row3 {
				width: 37.5%;
			}
			&.row4 {
				width: 50%;
			}
			&.row5 {
				width: 62.5%;
			}
			&.row6 {
				width: 75%;
			}
			&.row7 {
				width: 87.5%;
			}
			&.row8 {
				width: 100%;
			}
		}
	}
}


.b-side {
	& {
		position: relative;
	}
	&__bar {
		& {
			position: absolute;
			top: -110px;
			left: 10px;
			margin-top: 20px;
			width: calc(100% - 20px);
			z-index: 9998;
		}
		&-open {
			position: absolute;
			display: none;
			left: calc(50% - 30px);
			top: -60px;
			height: 60px;
			width: 60px;
			background-color: #5A009D;
			cursor: pointer;
		}
		&.form {
			padding: 35px;
			box-shadow: 0 4px 8px rgba(224,224,224,0.75);
		}
	}
}


@media all and (max-width: 1200px) {
	body {
		overflow-x: hidden;
	}
	.b-side {
		&__bar {
			& {
				position: fixed;
				top: auto;
				right: auto;
				left: calc(50% - 200px);
				bottom: 0;
				width: 400px;
				transform: translate(0, 100%);
				z-index: 10000;
				transition: transform 0.3s ease;
			}
			&.open-side-bar {
				transform: translate(0, 0);
			}
			&-open {
				display : block;
			}
			&.form {
			}
		}
	}
}

@media all and (max-width: 1024px) {
	.b-about {
		& {
		}
		h2,
		.lead {
			text-align: center;
		}
		&__detail,
		h2,
		.lead {
			margin-left: 20px;
			margin-right: 20px;
		}
	}
}

@media all and (max-height: 780px) {
	.b-side__bar {
		& {
			margin-top: 10px;
		}
		&.form {
			top: auto;
			padding : 20px 20px 10px;
		}
		.icon-ligature-half {
			display: none;
		}
		h3 {
			margin-bottom: 5px;
			font-size: 26px;
		}
		h4 {
			margin-bottom: 0;
			font-size: 18px;
		}
		button {
			margin-top: 20px;
		}
		button + .normal {
			margin-top: 10px;
			font-size: 12px;
		}
	}
}

@media all and (max-height: 710px) {
	.b-title {
		&__logo {
			& {
				padding: 70px 0 0 0;
			}
			&-breadcrumbs {
				& {
					margin-bottom: 4vh;
				}
			}
			&-ligature svg {
				height: 30px;
			}
			&-text {
				margin-bottom: 5vh;
			}
			&-img {
				& {
					margin-bottom: 5vh;
				}
			}
			&-note {
				margin: 0 auto 3vh;
			}
			&-feature span {
				& {
					padding-top: 60px;
				}
				&:before {
					font-size : 30px;
					line-height: 60px;
				}
				&:not(:last-child):after {
					height: 80px;
				}
				&.icon-all-body:before {
					font-size : 45px;
				}
			}
		}
	}
}

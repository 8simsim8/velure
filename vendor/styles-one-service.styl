}

@media all and (max-width: 1150px) {
	body {
		overflow-x: hidden;
	}
	.b-static {
		width: 100%;
	}
	.b-side {
		& {
			width: 0;
			flex: 0 0 0;
		}
		&:before {
			content: '';
			display: none;
			position: fixed;
			top: 0;
			left: 0;
			height: 100%;
			width: 100%;
			background: rgba(0,0,0,0.7);
			z-index: 9999;
			transition: opacity 0.2s ease;
		}
		&__bar {
			&.form {
				position : fixed;
				top : auto;
				right : auto;
				left : calc(50% - 175px);
				bottom : 0;
				width : 350px;
				transform : translate(0, 100%);
				z-index : 9990;
				box-shadow: none;
				transition : transform 0.3s ease;
			}
			&-open {
				display : block;
			}
		}
		&.open-side-bar {
			&:before {
				display: block;
				opacity: 1;
			}
			.b-side__bar {
				z-index : 10000;
			}
			.b-side__bar-open {
				& {
					position : absolute;
					top : 0;
					left: auto;
					right : -70px;
					height : 60px;
					width : 60px;
					font-size: 0;
					border-radius : 9px;
					background-color: rgba(0,0,0,0.8);
					cursor : pointer;
				}
				&:hover {
					& {
						background-color : #000;
					}
					&:before,
					&:after {
						border-top: 2px solid #fff;
					}
				}
				&:before,
				&:after {
					position: absolute;
					left: 12px;
					top: 28px;
					content: '';
					display: block;
					width: 38px;
					transform-origin : 50% 50%;
					border-top: 2px solid rgba(255,255,255,0.5);
					transition: border 0.2s ease;
				}
				&:before {
					transform : rotate(-45deg);
				}
				&:after {
					transform : rotate(45deg);
				}
			}
		}
	}
}

@media all and (max-width: 1150px) {
	.details-feature span {
		& {
			font-size: 14px;
		}
	}
}

@media all and (max-width: 1024px) {
	.b-about {
		& {
		}
		h2,
		.lead {
			text-align: center;
		}
		&__detail,
		h2,
		.lead {
			margin-left: 20px;
			margin-right: 20px;
		}

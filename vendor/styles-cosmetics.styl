@import 'nib'

.b-title {
	&__logo {
		&-text {
			margin-bottom: 5vh;
		}
		&-ligature{
			svg {
				height: 40px;
			}
		}
	}
}

.b-cosmetics {
	& {
		padding: 90px 10px 30px;
	}
	h2 {
		padding: 0 10px;
		margin-bottom: 1.3em;
		text-align: center;
	}
	.lead {
		padding: 0 10px;
		margin-bottom: 4.3em;
		text-align: center;
	}
	&__logos {
		& {
		}
		&-item {
			& {
				height : 210px;
				border-bottom : 1px solid rgba(0,0,0,0.1);
			}
			span {
				height: 100%;
				width: 100%;
				display: block;
				background-position : center;
				background-repeat : no-repeat;
				background-size : auto 148px;
			}
		}
	}
}

.b-form {
	& {
		position: relative;
		margin-bottom: 60px;
		z-index: 10;
	}
	.wrap {
		position:relative;
		z-index: 4;
	}
	&__wrap {
	}
	&__bg {
		& {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: -80px;
			overflow: hidden;
		}
		&-item1,
		&-item2,
		&-item3,
		&-item4,
		&-item5 {
			position: absolute;
			top: 0;
			height: 100%;
			background-repeat: no-repeat;
			background-size: contain;
		}
		&-item1 {
			& {
				left: calc(50% - 708px);
				width: 546px;
				background-position: left bottom 115px;
				transition: transform 0.5s ease 0.5s;
				z-index: 1;
			}
		}
		&-item2 {
			& {
				left : calc(50% - 625px);
				width : 862px;
				background-position : left bottom 30px;
				transition: transform 0.5s ease 0.7s;
				z-index : 2;
			}
		}
		&-item3 {
			& {
				left : calc(50% - 470px);
				width : 599px;
				background-position : left bottom 92px;
				transition: transform 0.5s ease 0.6s;
				z-index : 1;
			}
		}
		&-item4 {
			& {
				right : calc(50% - 658px);
				width : 475px;
				background-position : left bottom 92px;
				transition: transform 0.5s ease 0.75s;
				z-index : 2;
			}
		}
		&-item5 {
			& {
				right : calc(50% - 839px);
				width : 472px;
				background-position : right bottom 92px;
				transition: transform 0.5s ease 0.65s;
				z-index : 1;
			}
		}
	}
	.start.b-form__bg {
		.b-form__bg-item1,
		.b-form__bg-item2,
		.b-form__bg-item3,
		.b-form__bg-item4,
		.b-form__bg-item5 {
			transform: translate(0, 60px);
		}
	}
}

@media all and (max-width: 1620px) {
	.b-form {
		&__bg {
			&-item1 {
				& {
					left : calc(50% - 46vw);
					width : 448px;
				}
			}
			&-item2 {
				& {
					left : calc(50% - 39vw);
					width : 708px;
				}
			}
			&-item3 {
				& {
					left : calc(50% - 26vw);
					width : 496px;
				}
			}
			&-item4 {
				& {
					right : 8vw;
					width : 389px;
				}
			}
			&-item5 {
				& {
					right : -7vw;
					width : 389px;
				}
			}
		}
	}
}

@media all and (max-width: 1150px) {
	.b-cosmetics {
		& {
		}
		h2 {
		}
		.lead {
		}
		&__logos {
			&-item {
				& {
					height : 210px;
				}
				span {
					background-size : auto 120px;
				}
			}
		}
	}
}

@media all and (max-width: 1024px) {
}

@media all and (max-width: 550px) {
	.b-cosmetics {
		& {
			padding: 40px 0 0;
		}
		.lead {
			margin-bottom: 40px;
		}
		&__logos {
			&.row.row-wrap {
				flex-direction: row;
			}
			&-item.col {
				& {
					padding: 10px;
					width : 50%;
					height : 120px;
					max-width : 50%;
					min-width : 50%;
				}
				&:nth-child(odd) {
					border-right: 1px solid rgba(0,0,0,0.1);
				}
				span {
					background-size : contain;
				}
			}
		}
	}
	.b-form {
		& {
			margin-bottom: 10px;
			padding : 10px 10px 0;
		}
		&__bg {
			display: none;
		}
		.form {
			width: calc(100% + 20px);
			margin : 0 -10px;
			padding: 20px;
		}
	}
}
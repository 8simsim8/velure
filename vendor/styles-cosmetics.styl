@import 'nib'

.b-title {
	&__logo {
		&-text {
			margin-bottom: 5vh;
		}
		&-ligature{
			svg {
				height: 40px;
			}
		}
	}
}

.b-cosmetics {
	& {
		padding: 90px 0 30px;
	}
	h2 {
		margin-bottom: 1.3em;
		text-align: center;
		color : #A823A3;
	}
	.lead {
		margin-bottom: 4.3em;
		text-align: center;
	}
	&__logos {
		& {
			margin: 0 20px;
		}
		&-item {
			height: 210px;
			background-position: center;
			background-repeat: no-repeat;
			background-size: auto 148px;
			border-bottom: 1px solid #ABABAB;
		}
	}
}

.b-form {
	& {
		padding-bottom: 90px;
	}
	&__wrap {
		position:relative;
		padding: 53px 17% 33px;
		background-color: #FFFFFF;
		border-radius: 8px;
		border: 1px solid #E5E5E5;
		z-index: 4;
	}
	.icon-ligature-half {
		margin-bottom: 0.8em;
		font-size: 32px;
		color: #a823a3;
		text-align: center;
	}
	form {
		& {
		}
		h3 {
			margin-bottom: 1.25em;
			text-align: center;
		}
		.normal {
			margin-bottom: 5px;
			text-align: center;
		}

		button {
			margin-top: 50px;
			width: 100%;
		}
		button + .normal {
			margin-top: 30px;
			text-align: center;
			font-size : 14px;
			color : #5E4F5C;
		}
	}
}

@media all and (max-width: 1150px) {
	.b-cosmetics {
		& {
		}
		h2 {
		}
		.lead {
		}
		&__logos {
			&-item {
				height : 210px;
				background-size : auto 120px;
			}
		}
	}
}
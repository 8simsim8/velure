@import 'nib'

.b-title {
	&__logo {
		&-text {
			margin-bottom: 5vh;
		}
		&-ligature{
			svg {
				height: 40px;
			}
		}
	}
}

.b-cosmetics {
	& {
		padding: 90px 0 30px;
	}
	h2 {
		margin-bottom: 1.3em;
		text-align: center;
		color : #A823A3;
	}
	.lead {
		margin-bottom: 4.3em;
		text-align: center;
	}
	&__logos {
		& {
			margin: 0 20px;
		}
		&-item {
			height: 210px;
			background-position: center;
			background-repeat: no-repeat;
			background-size: auto 148px;
			border-bottom: 1px solid #ABABAB;
		}
	}
}

.b-form {
	& {
		padding-bottom: 90px;
	}
	&__wrap {
		box-shadow: 0 4px 8px rgba(224,224,224,0.75);
	}
}

@media all and (max-width: 1150px) {
	.b-cosmetics {
		& {
		}
		h2 {
		}
		.lead {
		}
		&__logos {
			&-item {
				height : 210px;
				background-size : auto 120px;
			}
		}
	}
}

@media all and (max-width: 1024px) {
	.b-cosmetics {
		h2,
		.lead {
			margin-left: 20px;
			margin-right: 20px;
		}
	}
}
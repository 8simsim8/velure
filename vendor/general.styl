.btn {
	& {
		display: inline-block;
		padding : 1em 30px;
		font-family : 'Raleway', sans-serif;
		font-size : 13px;
		font-weight : bold;
		text-transform : uppercase;
		border-radius: 5px;
		cursor : pointer;
		outline: none;
		transition : 	background 0.2s ease,
						color 0.2s ease,
						border 0.2s ease;
	}
	&:after {
		position: relative;
		padding-left: 10px;
		bottom: 1px;
		content: 'â€º';
	}
	&__big {
		font-size : 16px;
	}
	&__white {
		& {
			color: #FFFFFF;
			background : transparent;
			border: 1px solid #FFFFFF
		}
	}
	&__purple {
		& {
			background : #FFFFFF;
			border : 1px solid #A823A3;
			border-radius: 3px;
		}
		&-fill {
			color: #FFFFFF;
			background : #A823A3;
			border : 1px solid #A823A3;
		}

	}
}

.input {
	& {
		position: relative;
		display: inline-block;
		width: 100%;
		height: 40px;
		margin: 25px 0 0;
		border: none;
		outline: none;
		text-align: center
		line-height: 1.1em;
		background : transparent;
		border-bottom: 1px solid #e5e5e5;
		z-index: 1;
		vertical-align: top;
	}

		.input__field {
			position : relative;
			display : block;
			padding : 0.8em;
			width : 60%;
			border : none;
			border-radius : 0;
			background : transparent;
			font-size : 14px;
			color : #383838;
			font-weight : bold;
			resize : none;
			-webkit-appearance : none; /* for box shadows to show on iOS */
		}

		.input__field:focus {
			outline : none;
		}

		.input__label {
			& {
				display : inline-block;
				padding : 0 1em;
				width : 40%;
				color : #40363e;
				font-size : 70.25%;
				text-align : center;
				-webkit-font-smoothing : antialiased;
				-moz-osx-font-smoothing : grayscale;
				user-select : none;
			}

			.input__label-content {
				position : relative;
				top: 1em;
				display : block;
				width : 100%;
			}

		}

		/* Individual styles */

		/* Akira */
		&.input--akira {
			margin-top : 1.5rem;
			background-color : transparent;
		}

		.input__field--akira {
			z-index : 10;
			display : block;
			padding : 0 1em;
			width : 100%;
			height : 100%;
			background : transparent;
			text-align : center;
		}

		.input__label--akira {
			position : absolute;
			top : 0;
			left : 0;
			bottom : 0;
			padding : 0;
			width : 100%;
			cursor : text;
		}

		.input__label--akira::before,
		.input__label--akira::after {
			content : '';
			position : absolute;
			bottom : 0;
			left : 0;
			width : 100%;
			height : 1px;
		}
		.input__label--akira::before {
			transform-origin: 0 50%;
			transform : scale(0, 0);
			border-bottom: 1px solid #a24f96;
			transition : transform 0.3s ease;
			z-index : 2;
		}
		.input__label--akira::after {
			border-bottom: 1px solid #e5e5e5;
			z-index: 1;
		}

		.input__label-content--akira {
			transition:  transform 0.2s ease,
					font-size 0.2s ease,
					opacity 0.2s ease;
		}

		.input__field--akira:focus + .input__label--akira::before,
		.input--filled .input__label--akira::before {
			transform : scale(1, 3);
		}

		.input__field--akira:focus + .input__label--akira,
		.input--filled .input__label--akira {
			cursor : default;
			pointer-events : none;
		}

		.input__field--akira:focus + .input__label--akira .input__label-content--akira,
		&.input--filled .input__label-content--akira {
			opacity : 0.7;
			font-size : 12px;
			transform : translateY(-1.6rem);
		//transition-delay: 0s, 0.3s, 0.3s;
		}

		/* Error */
		label.error {
			position : absolute;
			top : -1.3em;
			width : 100%;
			text-align : center;
			font-family: 'Droid Serif', serif;
			font-size : 0.6rem;
			color : red;
		}
		input.error + label.error + .input__label > .input__label-content {
			opacity : 0;
		}
}

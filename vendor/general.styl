.btn {
	& {
		display: inline-block;
		padding : 1em 30px;
		font-family : 'Raleway', sans-serif;
		font-size : 13px;
		font-weight : bold;
		text-transform : uppercase;
		border-radius: 5px;
		cursor : pointer;
		outline: none;
		transition : 	background 0.2s ease,
						color 0.2s ease,
						border 0.2s ease;
	}
	&.arrow {
		&:after {
			position: relative;
			padding-left: 10px;
			bottom: 1px;
			content: '\203A';
		}
	}
	&__big {
		font-size : 16px;
	}
	&__white {
		& {
			color: #FFFFFF;
			background : transparent;
			border: 1px solid #FFFFFF
		}
		&:hover {
			background : #FFFFFF;
			color: #A823A3;
		}
	}
	&__submit {
		& {
			color: #FFFFFF;
			background : #23A86C;
			border : 1px solid #23A86C;
			border-radius : 4px;
		}
		&:hover {
			background : #24BC7E;
			border : 1px solid #24BC7E;
		}
	}
	&__purple {
		& {
			background : #FFFFFF;
			border : 1px solid #A823A3;
			border-radius: 4px;
		}
		&-fill {
			color: #FFFFFF;
			background : #A823A3;
			border : 1px solid #A823A3;
		}
		&-fill:hover {
			background : #BC23B7;
			border : 1px solid #BC23B7;

		}
		&:hover {
			background : #A823A3;
			color: #FFFFFF;
		}
		&-fill:hover {

		}
	}
	&__social {
		& {
			position: relative;
			padding : 16px 20px 16px 50px;
			font-size : 18px;
			color: #FFFFFF;
			text-transform: none;
		}
		&:before {
			position: absolute;
			left: 30px;
			display: inline-block;
			line-height: 20px;
		}
		&.icon-vk {
			& {
				background-color: #3e629c;
			}
			&:before {
				font-size: 19px;
			}
			&:hover {
				background-color: #4174B0;
			}
		}
		&.icon-fb {
			& {
				background-color: #2559b0;
			}
			&:before {
				font-size: 21px;
			}
			&:hover {
				background-color: #266AC4;
			}
		}
	}
}



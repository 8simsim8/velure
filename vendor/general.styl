.input {
	& {
		position: relative;
		display: inline-block;
		width: 100%;
		height: 40px;
		margin: 25px 0 0;
		border: none;
		outline: none;
		text-align: center
		font-family: 'Raleway', sans-serif;
		font-weight: normal;
		font-size: 16px;
		color: #40363e;
		line-height: 1.1em;
		background-color : transparent;
		z-index: 1;
		vertical-align: top;
	}
	&::-webkit-outer-spin-button,
	&::-webkit-inner-spin-button {
		-webkit-appearance: none;
		margin: 0;
	}

	&.img-arrow {
		background-size: 14px 7px;
		background-position: right center;
		//border-bottom: 1px solid #e5e5e5;
	}
	&.forcibly-placeholder {
		&:before {
			position: absolute;
			background-color: #FFFFFF;
			content: attr(placeholder) !important;
			font-family: Raleway;
			font-size: 16px;
			line-height: 1.5em;
			width: calc(100% - 30px);
			margin-right: 0.5em;
		}
		&:before,
		&:after {
			pointer-events: none;
		}
		&:focus:before,
		&:focus:after {
			display: none;
		}
		&:after {
			position: absolute;
			top: 0;
			right: 12px;
			line-height: 42px;
			speak: none;
			color: #bdc3c7;
			font-style: normal;
			font-weight: normal;
			font-variant: normal;
			text-transform: none;
			-webkit-font-smoothing: antialiased;
		}
		&.full:before {
			display: none;
		}
		&::-webkit-clear-button,
		&::-webkit-inner-spin-button{
			display: none;
		}
		&::-webkit-calendar-picker-indicator {
			opacity:0;
		}
	}
		.input__field {
			position : relative;
			display : block;
			padding : 0.8em;
			width : 60%;
			border : none;
			border-radius : 0;
			background-color : transparent;
			font-size : 16px;
			color : #40363e;
			resize : none;
			-webkit-appearance : none; /* for box shadows to show on iOS */
		}

		.input__field:focus {
			outline : none;
		}

		.input__label {
			& {
				display : inline-block;
				padding : 0 1em;
				width : 40%;
				color : #40363e;
				font-size : 70.25%;
				text-align : center;
				-webkit-font-smoothing : antialiased;
				-moz-osx-font-smoothing : grayscale;
				user-select : none;
			}

			.input__label-content {
				position : relative;
				top: 1em;
				display : block;
				width : 100%;
			}

		}

		/* Individual styles */

		/* Akira */
		&.input--akira {
			margin-top : 1.5rem;
			background-color : transparent;
		}

		.input__field--akira {
			z-index : 10;
			display : block;
			padding : 0 1em;
			width : 100%;
			height : 100%;
			background-color : transparent;
			text-align : center;
		}

		.input__label--akira {
			position : absolute;
			top : 0;
			left : 0;
			bottom : 0;
			padding : 0;
			width : 100%;
			cursor : text;
		}

		.input__label--akira::before,
		.input__label--akira::after {
			content : '';
			position : absolute;
			bottom : 0;
			left : 0;
			width : 100%;
			height : 1px;
		}
		.input__label--akira::before {
			transform-origin: 0 50%;
			transform : scale(0, 0);
			border-bottom: 1px solid #a24f96;
			transition : transform 0.3s ease;
			z-index : 2;
		}
		.input__label--akira::after {
			border-bottom: 1px solid #e5e5e5;
			z-index: 1;
		}

		.input__label-content--akira {
			transition:  transform 0.2s ease,
					font-size 0.2s ease,
					opacity 0.2s ease;
		}

		.input__field--akira:focus + .input__label--akira::before,
		.input--filled .input__label--akira::before {
			transform : scale(1, 3);
		}

		.input__field--akira:focus + .input__label--akira,
		.input--filled .input__label--akira {
			cursor : default;
			pointer-events : none;
		}

		.input__field--akira:focus + .input__label--akira .input__label-content--akira,
		&.input--filled .input__label-content--akira {
			opacity : 0.7;
			font-size : 12px;
			transform : translateY(-1.6rem);
		}

		/* Error */
		label.error {
			position : absolute;
			top : -1.3em;
			width : 100%;
			text-align : center;
			font-family: 'Droid Serif', serif;
			font-size : 0.6rem;
			color : red;
		}
		input.error + label.error + .input__label > .input__label-content {
			opacity : 0;
		}
}


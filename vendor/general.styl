/* Checkbox */
.input-checkbox {
	& {
		position: relative;
		cursor: pointer;
		display: inline-block;
		padding-left: 0;
		line-height: 0;
	}
	input[type='checkbox'] {
		& {
			visibility: hidden;
			width: 0!important;
		}
		& + span {
			display: flex;
			align-items: center;
			height: 24px;
		}
		& + span:before {
			position: relative;
			display: inline-block;
			height: 24px;
			width: 24px;
			margin-right: 15px;
			content: " ";
			color: #a8238e;
			font-family: 'icon-velur';
			font-size: 16px;
			speak: none;
			font-style: normal;
			font-weight: normal;
			font-variant: normal;
			text-transform: none;
			-webkit-font-smoothing: antialiased;
			border: 1px solid #CCCCCC;
			border-radius: 4px;
		}
		& + span,
		& + span:before {
			transition: color .1s ease;
		}
		&:checked + span {
		}
		&:checked + span:before{
			content: "\e910";
		}
	}
	span:hover,
	span:hover:before {
		opacity: 1;
	}
}


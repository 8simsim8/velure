html {
	font-family: 'Raleway', sans-serif;
}

h1 {
	font-family : 'Playfair Display', sans-serif;
	font-size : 60px;
	line-height : 1em;
}
h2 {
	font-family : 'Playfair Display', sans-serif;
	font-size : 48px;
	line-height : 1.27em;
}
h3 {
	font-family : 'Playfair Display', sans-serif;
	font-size : 36px;
	line-height : 1.7em;
}
h4 {
	font-family : 'Playfair Display', sans-serif;
	font-size : 24px;
	line-height : 2.5em;
}
.text {
	font-family : Raleway;
	font-size : 16px;
	line-height : 1.5em;
}
.lead {
	font-family : 'Playfair Display', sans-serif;
	font-size : 24px;
	line-height : 1.5em;
}
a {
	text-decoration: none;
	transition: color 0.2s ease;
}
.btn {
	padding: 1em 30px;
	font-family: 'Raleway', sans-serif;
	font-weight : bold;
	font-size : 13px;
	text-transform : uppercase;
	color : #A823A3;
	cursor: pointer;
	transition: background 0.2s ease,
				color 0.2s ease,
				border 0.2s ease;
}
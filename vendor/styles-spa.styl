.b-certificate {
	& {
		margin-top: 105px;
		background: url("../img/certificate-bg.jpg") no-repeat;
	}
	.wrap {
		& {
			padding : 106px 0 0;
		}
	}
	h2 {
		margin-bottom: 1.25em;
		color: #000000;
		text-align: center;
	}
	.lead {
		margin-bottom: 4.1em;
	}
	.row {
		& {
			position : relative;
		}
		&:before {
			position :absolute;
			display: block;
			content: '';
			bottom: -155px;
			left: 0;
			height: 461px;
			width: 66%;
			max-width: 900px;
			background: url("../img/certificate.png") no-repeat right bottom;
			background-size: 900px 461px;
		}
	}
	&__form {
		& {
			position: relative;
			padding: 0 20px 40px;
			z-index: 1;
		}
		label {
			position: relative;
			display: block;
			height: 50px;
			margin-bottom: 20px;
		}
		.select {
			& {
				margin-top : 0;
				height: 50px;
			}
			.form-control {
				& {
					padding-left : 20px;
					padding-right : 30px;
					text-align : left;
					height : 50px;
					background-color : #FFFFFF;
					border-radius : 4px;
				}
				&:before {
					margin-right: 0;
				}
			}
			.wrap-error {
				top: 0;
			}
			.wrap-error span.error {
				top :0;
			}
		}
		&-input {
			border: none;
			outline: none;
			width: 100%;
			padding-left : 20px;
			padding-right : 30px;
			text-align : left;
			height : 50px;
			background-color : #FFFFFF;
			border-radius : 4px;
		}
		.input-checkbox {
			margin-top: 30px;
			padding-top: 0;
		}

		.btn {
			width: 100%;
		}
	}
}



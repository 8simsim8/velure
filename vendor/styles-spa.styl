.b-staffs {
	& {
		padding-top: 80px;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
		color : #40363E;
	}
	&__title {
		& {
			padding: 65px 0 90px;
			background: url("../img/staffs-title-bg.jpg") center;
		}
	}
	&__list {
		& {
			padding-top: 75px;
		}
		&-item {
			& {}
			img {
				width: 100%;
				margin-bottom: 40px;
				object-fit: cover;
			}
			h4 {
				text-align: center;
				margin-bottom: 15px;
				color: #40363e;
			}
			.text {
				text-align: center;
				color: #665c64;
			}
		}

	}
	&__note {
		& {
			padding-top: 70px;
		}
		h4 {
			margin-bottom: 0.9em;
			color : #a823a3;
		}
		.text {
			color : #40363E;
		}
		.text:not(:last-child) {
			margin-bottom: 1em;
		}
		&-left-text {
			& {
				position: relative;
				margin-bottom : 50px;
				padding-right: 20px;
				width: 50%;
			}
			&:after {
				position: absolute;
				top: 0;
				right: -100%;
				width: 100%;
				height: 100%;
				content: '';
				display: block;
				background : url("../img/staffs-note-bg_1.jpg") no-repeat center center;
				background-size : contain;
			}
		}
		&-right-text {
			& {
				position: relative;
				margin-left: 50%;
				padding-left: 20px;
				width: 50%;
			}
			&:after {
				position: absolute;
				top: 0;
				left: -100%;
				width: 100%;
				height: 100%;
				content: '';
				display: block;
				background : url("../img/staffs-note-bg_2.jpg") no-repeat center center;
				background-size : contain;
			}
		}
	}
}
.b-certificate {
	& {
		padding-top: 140px;
	}
	&__bg {
		background: url("../img/velur-bg.jpg") no-repeat;
	}
	.wrap {
		padding: 65px 0 90px;
	}
	.icon-ligature {
		color: #f5ddc6;
	}
	h2 {
		margin: 0 auto;
		max-width: 930px;
		color: #FFFFFF;
		text-align: center;
	}
	&__full-logo {
		background-color: #A823A3;
		background-position: center;
		background-size: auto 60%;
		border-radius : 4px 0 0 4px;
	}
	&__form {
		& {
			background-color : #FFFFFF;
			border-radius : 0 4px 4px 0;
		}
		&-wrap {
			padding: 40px 70px 70px;
		}
		.input-checkbox {
			margin-top: 40px;
		}
		.btn {
			margin-top: 40px;
			width: 100%;
		}
	}
}

.b-also {
	& {
		padding-top: 110px;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	&-services__links-item {
		& {
			position : relative;
		}
		.half-circle {
			& {
				left : 10px;
				right : 10px;
				width : auto;
				z-index : 2;
			}
			&:before,
			&:after {
				border: none;
			}
			&_top {
				top: 10px;
			}
			&_bottom {
				bottom: 10px;
			}
		}

	}
}
.b-parallax {
	& {
		position: relative;
		padding: 140px 0;
		height : 565px;
	}
	&-back {
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		background-color: transparent;
		background-size: cover;
		background-repeat: repeat-y;
		background-attachment fixed;
		z-index: 1;
	}
	.wrap {
		& {
			position: relative;
			margin: 0 auto;
			z-index: 2;
		}
	}
	h3 {
		margin-bottom: 65px;
		text-align: center;
		color: #FFFFFF;
	}
	h3 + p {
		margin-bottom: 65px;
		text-align: center;
		color : #FFFFFF;
	}
}

.b-slider {
	& {
		padding: 104px 0 0;
	}
	h2 {
		text-align: center;
		color : #A823A3;
	}
	&__shadow {
		& {
			text-align: center;
			height : 520px;
			width : 100%;
			color : #FFFFFF;
		}
		&:before {
			font-size: 338px;
			line-height: 516px;
			text-shadow: 0 0 4px rgba(0,0,0,0.5);
			transition: text-shadow 1.5s ease 0.5s;
		}
	}
	&__shadow.start {
		& {
		}
		&:before {
			text-shadow: 4px 40px 10px rgba(0,0,0,0.5);
		}

	}
	p.lead {
		margin-bottom: 70px;
		text-align: center;
	}
	.b-slider__viewport {
		height: 544px;
		width: 100%;
	}
	.b-slider__viewport-wrap-slide {
		padding: 0;
	}
	.swiper-controls {
		top: calc(50% - 15px);
	}
	.swiper-controls-prev {
		left: 50px;
	}
	.swiper-controls-next {
		right: 50px;
	}
}

.b-form {
	& {
		position: relative;
		padding-top: 80px;
		overflow: hidden;
	}
	&__row {
		& {
			padding-bottom: 90px;
		}
		&-block {
			& {
			}
			&-wrap {
				position:relative;
				z-index: 4;
			}
			form {
				& {
					overflow:hidden;
					padding: 65px 17% 33px;
				}
				h3 {
					margin-bottom: 50px;
					text-align: center;
				}
				.normal {
					margin-bottom: 5px;
					text-align: center;
				}

				input[type="submit"] {
					margin-top: 50px;
					width: 100%;
				}
				.normal {
					margin-top: 30px;
					text-align: center;
					font-size : 14px;
					color : #5E4F5C;
				}
			}
		}
	}

	&__bg {
		& {
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			margin-bottom: 90px;
		}
		&-item1,
		&-item2,
		&-item3,
		&-item4,
		&-item5 {
			position: absolute;
			top: 0;
			height: 100%;
			background-repeat: no-repeat;
			background-size: contain;
		}
		&-item1 {
			& {
				left: calc(50% - 46vw);
				width: 30vw;
				background-position: left bottom 85px;
				background-size: 30vw 25vw;
				transform: translate(0,0);
				transition: transform 0.5s ease 0.5s;
				z-index: 1;
			}
		}
		&-item2 {
			& {
				left : calc(50% - 39vw);
				width : 49vw;
				background-position : left bottom;
				transform: translate(0,0);
				transition: transform 0.5s ease 0.7s;
				z-index : 2;
			}
		}
		&-item3 {
			& {
				left : calc(50% - 29vw);
				width : 35vw;
				background-position : left bottom 72px;
				transform: translate(0,0);
				transition: transform 0.5s ease 0.6s;
				z-index : 1;
			}
		}
		&-item4 {
			& {
				right : 8vw;
				width : 27vw;
				background-position : left bottom 72px;
				transform: translate(0,0);
				transition: transform 0.5s ease 0.75s;
				z-index : 2;
			}
		}
		&-item5 {
			& {
				right : -8vw;
				width : 27vw;
				background-position : left bottom 72px;
				transform: translate(0,0);
				transition: transform 0.5s ease 0.65s;
				z-index : 1;
			}
		}
	}
	.start.b-form__bg {
		.b-form__bg-item1 {
			transform: translate(0, 90px);
		}
		.b-form__bg-item2 {
			transform: translate(0, 90px);
		}
		.b-form__bg-item3 {
			transform: translate(0, 90px);
		}
		.b-form__bg-item4 {
			transform: translate(0, 90px);
		}
		.b-form__bg-item5 {
			transform: translate(0, 90px);
		}
	}
}

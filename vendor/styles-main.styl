.b-programs {
	& {
		padding : 120px 0;
	}
	h2 {
		margin-bottom: 1.18em;
		text-align: center;
		color : #A823A3;
	}
	.normal {
		margin-bottom: 125px;
		text-align: center;
		color : #000000;
	}
	&__cards {
		& {
		}
		&-wrap {
			& {
				height: 100%;
			}
			&-item {
				& {
					overflow: hidden;
					height: 100%;
					padding : 52px 37px 37px 37px;
					border: 1px solid #e0e0e0;
				}
				h3 {
					text-align : center;
					margin-bottom : 1.35em;
				}
				h3 + p {
					margin-bottom: 75px;
					font-family : 'Playfair Display', sans-serif;
					font-size : 21px;
					text-align: center;
					line-height : 1.53em;
					color : #000000;
				}
				&-table {
					& {
						margin-bottom : 10px;
					}
					li {
						display: inline-flex;
						width: 100%;
						height: 40px;
						justify-content: space-between;
						align-items: center;
						padding: 0.7em 0;
						border-bottom: 1px dotted #cccccc;
					}
					span:first-child {
						padding-right: 1px;
						font-family : 'Raleway', sans-serif;
						font-size : 14px;
						line-height : 1.7em;
						color : #5E4F5C;
					}
					span:last-child {

						text-align: right;
						font-family : 'Raleway', sans-serif;
						font-size : 16px;
						line-height : 1.5em;
						color : #A24F96;
					}
				}
				.yet {
					font-size : 13px;
					line-height : 24px;
					color : #ABABAB;
				}
				.btn {
					& {
						margin : 35px auto 0;
						font-size : 13px;
					}
					&:after {
						position: relative;
						padding-left: 10px;
						bottom: 1px;
						content: '›';
					}
				}
			}
		}
	}
}

p.action-programs {
	& {
	}
	span:first-child {
		display: block;
		position: relative;
	}
	span:first-child:after {
		position: absolute;
		display: inline-block;
		top: 0.5em;
		left: 100%;
		margin-left: 10px;
		content:'акция';
		padding: 4px 5px;
		line-height: 1em
		text-transform: uppercase;
		background-color: #a24f96;
		border-radius: 3px;
		color: #FFFFFF;
		font-size: 9px;
	}
}


.b-reclame {
	& {

	}
	&__item {
		& {
			display: block;
			padding: 10px;
			padding-right: 13%;
			background-position: right 10px center;
			background-size: 48px;
			cursor: pointer;

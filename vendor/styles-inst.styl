@import 'nib';

html {
	font-family: Arial, sans-serif;
}

#instafeed {
	& {
		display : flex;
		flex-wrap: wrap;
	}
	.item-insta {
		& {
			position: relative;
			display: block;
		}
		.insta__wrap-img {
			& {
				height : 100%;
				width : 100%;
				font-size: 0;
				overflow: hidden;
			}
			img {
				width: 100%;
				object-fit: cover;
				transform-origin: center;
				transition: transform 0.2s;
			}
		}
		&:hover {
			img {

				transform: scale(1.05);
			}
			.insta-header {
			}
		}
		.insta-header {
			& {
				position : absolute;
				padding: 0 24px 10px;
				bottom: 0;
				left: 10px;
				right: 10px;
				height: 40px;
				display: flex;
				justify-content: space-between;
				align-items: center;
				font-weight: bold;
				font-size: 14px;
				background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
			}
			.insta-logo {
				& {
					font-size: 13px;
					margin: 0;
					color: #FFFFFF;
				}
				&:before {
					position: relative;
					display: inline-block;
					height: 20px;
					width: 20px;
					line-height: 20px;
					font-size: 12px;
					border-radius: 50%;
					background-color: #a24f96;
					margin-right: 5px;
				}
			}
			.insta-date-create {
				color: #ababab;
			}
		}
		.insta-caption {
			& {
				padding-top: 20px;
				font-size: 16px;
				line-height: 1.65em;
			}
			&__text {
				color: #5d4f5c;
			}
			&__tags {
				color: #396ca6;
			}
		}
	}
}
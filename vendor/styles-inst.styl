@import 'nib';

html {
	font-family: Arial, sans-serif;
}

#instafeed {
	& {
		display : flex;
		flex-wrap: wrap;
	}
	.item-insta {
		& {
			position: relative;
			display: block;
		}
		&:hover {
			img {
				transform: scale(1.05);
			}
			.insta-header {
				transform: translateZ(1px);
			}
		}
		.insta-header {
			& {
				position : absolute;
				bottom: 10px;
				left: 24px;
				right: 24px;
				height: 40px;
				display: flex;
				justify-content: space-between;
				align-items: center;
				font-weight: bold;
				font-size: 14px;
			}
			.insta-logo {
				& {
					font-size: 13px;
					color: #FFFFFF;
				}
				&:before {
					position: relative;
					display: inline-block;
					height: 20px;
					width: 20px;
					line-height: 20px;
					font-size: 12px;
					border-radius: 50%;
					background-color: #a24f96;
					margin-right: 5px;
				}
			}
			.insta-date-create {
				color: #ababab;
			}
		}
		img {
			max-width: 100%;
			transition: transform 0.2s ease;
		}
		.insta-caption {
			& {
				padding-top: 20px;
				font-size: 16px;
				line-height: 1.65em;
			}
			&__text {
				color: #5d4f5c;
			}
			&__tags {
				color: #396ca6;
			}
		}
	}
}
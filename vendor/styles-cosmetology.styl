@import 'nib'

.b-title {
	&__logo {
		&-text {
			margin-bottom: 5vh;
		}
		&-ligature{
			svg {
				height: 40px;
			}
		}
	}
}

.b-procedures {
	& {
		padding-top: 80px;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
		margin-bottom: 90px;
		color : #40363E;
	}

}

.b-packages {
	& {
		padding: 100px 10px 0;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
		margin-bottom: 100px;
		color : #40363E;
	}
	&__accordeon-description {
		.btn + a {
			& {
				margin-left : 2.7em;
				font-family : 'Raleway', sans-serif;
				font-weight : bold;
				font-size : 0.65rem;
				letter-spacing : 0.05em;
				text-transform : uppercase;
				color : #A823A3;
			}
			&:hover {
				color: #bc23b7;
			}
		}
	}
}

.b-staffs {
	& {
		padding-top: 80px;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
	}
	&__title {
		& {
			padding: 65px 20px 13%;
			background: url("../img/velur-bg.jpg") center;
		}
		h2,
		.lead {
			color: #FFFFFF
		}
		.icon-ligature {
			color: #FFFFFF;
		}
	}
	&__list {
		& {
			justify-content: center;
		}
		&-item {
			&.col {
				max-width: 200px;
			}
			.staff-img-wrap {
				position: relative;
				display: block;
				padding-top: 100%;
			}
			img {
				position: absolute;
				top: -50%;
				height: 100%;
				border-radius: 50%;
				width: 100%;
				margin-bottom: 40px;
				object-fit: cover;
			}
			h4 {
				margin-top: calc(-50% + 40px);
				text-align: center;
				margin-bottom: 15px;
				color: #40363e;
			}
			h4 > span {
				display: block;
			}
			.text {
				text-align: center;
				color: #665c64;
			}
		}
	}
}

&__reviews {
	padding : 90px 20px 0;
}

.b-certificate {
	& {
		margin-top: 105px;
		background: url("../img/certificate-bg.jpg") no-repeat;
	}
	.wrap {
		& {
			padding : 106px 0 0;
		}
	}
	h2 {
		margin: 0 20px;
		margin-bottom: 1.25em;
		color: #000000;
		text-align: center;
	}
	.lead {
		margin: 0 20px;
		margin-bottom: 4.1em;
		text-align: center;
	}
	.row {
		& {
			position : relative;
		}
		&:before {
			position :absolute;
			display: block;
			content: '';
			bottom: -155px;
			left: 0;
			height: 461px;
			width: 66%;
			max-width: 900px;
			background: url("../img/certificate.png") no-repeat right bottom;
			background-size: 900px 461px;
		}
	}
	&__form {
		& {
			position: relative;
			padding: 0 20px 40px;
			z-index: 1;
		}
		label {
			position: relative;
			display: block;
			height: 50px;
			margin-bottom: 20px;
		}
		.select {
			& {
				margin-top : 0;
				height: 50px;
			}
			.form-control {
				& {
					padding-left : 20px;
					padding-right : 30px;
					text-align : left;
					height : 50px;
					background-color : #FFFFFF;
					border-radius : 4px;
				}
				&:before {
					margin-right: 0;
				}
			}
		}
		.wrap-error span.error {
			top : -50px;
			left: 5px;
		}
		&-input {
			border: none;
			outline: none;
			width: 100%;
			padding-left : 20px;
			padding-right : 30px;
			text-align : left;
			height : 50px;
			background-color : #FFFFFF;
			border-radius : 4px;
		}
		.input-checkbox {
			margin-top: 30px;
			padding-top: 0;
		}

		.btn {
			width: 100%;
		}
	}
}


.b-massage {
	& {
		padding-top: 190px;
	}
	h2 {
		margin-bottom: 1.4em;
	}
	article {
		&:not(:last-child) {
			margin-bottom: 40px;
		}
		h4 {
			color: #a823a3;
			margin-bottom: 0.7em;
		}
		p.text:not(:last-child) {
			margin-bottom: 1em;
		}
	}
}

.b-also {
	& {
		padding: 70px 0 55px;
	}
}

@media all and (max-width: 1024px) {
	.b-procedures,
	.b-packages,
	.b-staffs,
	.b-certificate,
	.b-massage {
		h2,
		.lead,
		article {
			margin-left: 20px;
			margin-right: 20px;
		}
	}
	.b-staffs {
		&__reviews.wrap {
			margin-left: 20px;
			margin-right: 20px;
		}
	}
	.b-certificate {
		& {
			margin-top : 105px;
		}
		.wrap {
			& {
				padding : 106px 0 0;
			}
		}
	}
}
@import 'nib'

.b-procedures {
	& {
		padding-top: 80px;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
		margin-bottom: 90px;
		color : #40363E;
	}

}

.b-packages {
	& {
		padding: 100px 0 0;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
		margin-bottom: 100px;
		color : #40363E;
	}
	&__accordeon-description {
		.btn + a {
			& {
				margin-left : 2.7em;
				font-family: 'Raleway', sans-serif;
				font-weight : bold;
				font-size : 0.65rem;
				letter-spacing : 0.05em;
				text-transform : uppercase;
				color : #A823A3;
			}
			&:hover {
				color: #bc23b7;
			}
		}
	}
}

.b-staffs {
	& {
		padding-top: 80px;
	}
	h2,
	.lead {
		margin: 0 auto;
		max-width: 930px;
		text-align: center;
	}
	.lead {
	}
	&__title {
		& {
			padding: 65px 0 13%;
			background: url("../img/velur-bg.jpg") center;
		}
		h2,
		.lead {
			color: #FFFFFF
		}
		.icon-ligature {
			color: #FFFFFF;
		}
	}
	&__list {
		& {
			justify-content: center;
		}
		&-item {
			&.col {
				max-width: 200px;
			}
			.staff-img-wrap {
				display: block;
				padding-top: 100%;
				margin-top: -50%;
				position: relative;
				margin-bottom: 40px;
			}
			img {
				position: absolute;
				top: 0;
				left: 0;
				border-radius: 50%;
				width: 100%;
				height: 100%;
				object-fit: cover;
			}
			h4 {
				text-align: center;
				margin-bottom: 15px;
				color: #40363e;
			}
			h4 > span {
				display: block;
			}
			.text {
				text-align: center;
				color: #665c64;
			}
		}
	}
}

.b-reviews {
	padding: 90px 20px 0;
}


.b-massage {
	& {
		padding-top: 190px;
	}
	.col {
		margin: 0 -10px;
	}
	h2 {
		margin-bottom: 1.4em;
	}
	article {
		&:not(:last-child) {
			margin-bottom: 40px;
		}
		h4 {
			color: #a823a3;
			margin-bottom: 0.7em;
		}
		p.text:not(:last-child) {
			margin-bottom: 1em;
		}
	}
}

.b-also {
	& {
		padding: 70px 0 55px;
	}
}


.b-procedures,
.b-packages,
.b-staffs,
.b-certificate {
	h2,
	.lead,
	article {
		padding: 0 20px;
	}
}
.b-staffs {
	&__reviews.wrap {
		padding: 0 20px;
	}
}


@media all and (max-width: 1024px) {
}

@media all and (max-width: 768px) {
	.b-staffs__title {
		padding-bottom: 60px;
	}
	.b-staffs__slider {
		width: 100%;
		overflow: hidden;
	}
	.b-staffs__list {
		& {
			justify-content : flex-start;
		}
		&-item.col {
			flex: 0 0 auto;
			max-width: 100%;
		}
		&-item img {
			position: static;
			margin-top: 20px;
			max-height: 200px;
		}
		&-item .staff-img-wrap {
			display: block;
			margin: 0 auto;
			padding-top: 0;
			max-width: 200px;
		}
	}
	.b-staffs__slider .swiper-pagination {
		& {
			margin-top: 40px;
		}
		&-bullet {
			& {
				height : 6px;
				width : 6px;
				margin : 0 5px;
				cursor : pointer;
				background-color : rgba(0, 0, 0, 0.2);
			}
			&:hover {
				background-color : rgba(0, 0, 0, 0.5);
			}
			&-active {
				background-color : rgba(0, 0, 0, 1);
			}
		}
	}
	.b-massage {
		& {
		}
		.col {
			margin: 0;
		}
	}
}

@media all and (max-width: 550px) {
	.b-procedures {
		& {
			padding-top : 40px;
		}
		.lead {
			margin-bottom: 40px;
		}
	}
	.b-packages {
		& {
			padding: 40px 0 0;
		}
		h2,
		.lead {
			margin: 0 auto;
			text-align: center;
		}
		.lead {
			margin-bottom: 40px;
		}
		&__accordeon-description {

			.btn + a {
				display: block;
				height: 40px;
				line-height: 40px;
				font-size: 12px;
				margin-left: 0;
				margin-top: 10px;
				text-align: center;
			}
		}
	}
	.b-staffs {
		& {
			padding-top: 40px;
		}
		&__list.swiper-wrapper {
			flex-direction : row;
		}
		&__list-item.col {
			min-width: auto;
		}
	}
	.b-massage {
		& {
			padding-top: 40px;
		}
		.col {
			margin: 0 -10px;
		}
		h2 {
			text-align: center;
			margin-bottom: 1.4em;
		}
		article {
			&:not(:last-child) {
				margin-bottom: 40px;
			}
			h4 {
				text-align: center;
				margin-bottom: 0.7em;
			}
			p.text:not(:last-child) {
				margin-bottom: 1em;
			}
		}
	}

	.b-also {
		& {
			padding: 40px 0 10px;
		}
	}

}
.b-feature {
	& {
		padding : 80px 0 0;
	}
	.icon-ligature {
		color : #A823A3;
	}
	h2 {
		margin-bottom: 1.18em;
		padding: 0 20px;
		text-align : center;
		color : #000000;
	}
	.lead {
		padding: 0 20px;
		text-align: center;
		color: #4d344a;
	}
	&__tile {
		padding-top: 110px;
	}
	&__item {
		& {
		}
		&:nth-child(even) {
			flex-direction: row-reverse;
		}
		&-img {
			& {
				position: relative;
				overflow: hidden;
			}
			&-block {
				position: absolute;
				bottom: 0;
				left: 0;
				height: 150%;
				width: 100%;
				background-position: center;
				background-repeat: no-repeat;
				background-size: cover;
			}
		}
		&-note {
			& {
				background-color : #F6F4E9;
			}
			&-inner {
				& {
					display: flex;
					height: 100%;
					flex-direction: column;
					justify-content: space-between;
					align-items: center;
					margin: auto;
					padding: 80px 11% 80px;
				}
				p,
				h3 {
					transition: opacity 0.3s ease,
								transform 0.7s ease-in;
				}
				&.start {
					p,
					h3 {
						opacity: 0;
						transform: translate(0, 40px);
					}
				}
				h3 {
					margin-bottom: 1.3em;
					text-align: center;
					color: #a823a3;
					line-height: 1.16em;
				}
				.lead {
					margin-bottom: 1.3em;
				}
				.icon-about-ligature {
					color : #ABABAB;
				}
			}

		}
	}
}

.b-rewards {
	& {
		padding: 110px 0 0;
	}
	h2 {
		margin-bottom: 1.18em;
		padding: 0 20px;
		text-align : center;
		color : #000000;
	}
	.lead {
		padding: 0 20px;
		text-align: center;
		color: #4d344a;
	}
	&__container {
		display : block;
	}
	&__viewport {
		& {
			display : block;
			padding-top : 100px;
			text-align : center;
		}
		&:not(.swiper-container-horizontal) .swiper-wrapper {
			display: block;
		}
	}
	&__item {
		& {
			display : inline-block;
			margin : 20px;
			font-size : 0;
			max-width: 90vw;
			border : 15px solid #CECECE;
			border-image : url('../img/rewards/border.png') 15 repeat;
			box-shadow : 12px 10px 25px rgba(0, 0, 0, 0.1);
		}
		img {
			display: block;
			height: 100%;
			width: 100%;
		}
	}
	.swiper-pagination {
		display: none;
	}
}


.b-reviews {
	padding-bottom: 90px;
}


.b-achievements {
	& {
		padding: 110px 20px 150px;
		background-color: #F5F5F5;
	}
	h2 {
		margin-bottom: 1.16em;
		color: #000000;
	}
	&__item {
		&:not(:last-child) {
			margin-bottom : 30px;
		}
		h4 {
			margin-bottom: 1.16em;
			color: #a823a3;
		}
		p.text:not(:last-child) {
			margin-bottom: 1.16em;
			color: #4d344a;
		}
	}
}


.b-form {
	& {
		margin-top: -100px;
		position: relative;
		padding-bottom: 90px;
	}
	&__row {
		& {
		}
		&-block {
			& {
			}
			&-wrap {
				position:relative;
				z-index: 4;
			}
		}
	}
	&__bg {
		& {
			bottom: 20px;
		}
	}
}



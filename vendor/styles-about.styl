.b-feature {
	& {
		padding : 80px 0 0;
	}
	.icon-ligature {
		color : #A823A3;
	}
	h2 {
		margin-bottom: 1.18em;
		padding: 0 20px;
		text-align : center;
		color : #000000;
	}
	.lead {
		padding: 0 20px;
		text-align: center;
		color: #4d344a;
	}
	&__tile {
		padding-top: 110px;
	}
	&__item {
		& {
		}
		&:nth-child(even) {
			flex-direction: row-reverse;
		}
		&-img {
			object-fit: cover;
		}
		&-note {
			& {
				background-color : #F6F4E9;
			}
			&-inner {
				& {
					display: flex;
					height: 100%;
					flex-direction: column;
					justify-content: space-between;
					align-items: center;
					margin: auto;
					padding: 80px 11% 80px;
				}
				h3 {
					text-align: center;
					color: #a823a3;
				}
				.icon-about-ligature {
					color : #ABABAB;
				}
			}

		}
	}
}


.b-rewards {
	& {
		padding: 110px 0 0;
	}
	h2 {
		margin-bottom: 1.18em;
		padding: 0 20px;
		text-align : center;
		color : #000000;
	}
	.lead {
		padding: 0 20px;
		text-align: center;
		color: #4d344a;
	}

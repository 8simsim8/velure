.b-feature {
	& {
		padding : 80px 0 0;
	}
	.icon-ligature {
		color : #A823A3;
	}
	h2 {
		margin-bottom: 1.18em;
		padding: 0 20px;
		text-align : center;
		color : #000000;
	}
	.lead {
		padding: 0 20px;
		text-align: center;
		color: #4d344a;
	}
	&__tile {
		padding-top: 110px;
	}
	&__item {
		& {
		}
		&:nth-child(even) {
			flex-direction: row-reverse;
		}
		&-img {
			& {
				position: relative;
				overflow: hidden;
			}
			&-block {
				position: absolute;
				bottom: 0;
				left: 0;
				height: 150%;
				width: 100%;
				background-position: center;
				background-repeat: no-repeat;
				background-size: cover;
			}
		}
		&-note {
			& {
				background-color : #F6F4E9;
			}
			&-inner {
				& {
					display: flex;
					height: 100%;
					flex-direction: column;
					justify-content: space-between;
					align-items: center;
					margin: auto;
					padding: 80px 11% 80px;
				}
				p,
				h3 {
					transition: opacity 0.3s ease,
								transform 0.7s ease-in;
				}
				&.start {
					p,
					h3 {
						opacity: 0;
						transform: translate(0, 40px);
					}
				}
				h3 {
					margin-bottom: 1.3em;
					text-align: center;
					color: #a823a3;
					line-height: 1.16em;
				}
				.lead {
					margin-bottom: 1.3em;
				}
				.icon-about-ligature {
					color : #ABABAB;
				}
			}

		}
	}
}

.b-rewards {
	& {
		padding: 110px 0 0;
	}
	h2 {
		margin-bottom: 1.18em;
		padding: 0 20px;
		text-align : center;
